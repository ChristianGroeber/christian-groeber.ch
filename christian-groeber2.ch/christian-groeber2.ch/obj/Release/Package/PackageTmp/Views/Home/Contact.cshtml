@{
    ViewBag.Title = "Contact";
}
<link href="~/Content/custom-css/contact.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        var screenwidth = $(window).width();

        if (screenwidth <= 550) {
            console.log(screenwidth);
            console.log($(".site-content").css("width"));
            $(".site-content").css("width", "95% !important");
        }
    });
</script>

